    "truffle-plugin-verify": "^0.3.11",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typechain": "^2.0.0",
    "typechain-target-truffle": "^1.0.2",
